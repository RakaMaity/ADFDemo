{
	"name": "dataflowSortTransform",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DataFlowSourceEmployee",
						"type": "DatasetReference"
					},
					"name": "Employees"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedTextOutput",
						"type": "DatasetReference"
					},
					"name": "sinkEmployees"
				}
			],
			"transformations": [
				{
					"name": "sortEmployees"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empid as string,",
				"          empName as string,",
				"          gender as string,",
				"          location as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Employees",
				"Employees sort(asc(empName, true)) ~> sortEmployees",
				"sortEmployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['EmployeesSorted.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          empid,",
				"          empName,",
				"          gender,",
				"          location,",
				"          department",
				"     ),",
				"     partitionBy('hash', 1)) ~> sinkEmployees"
			]
		}
	}
}